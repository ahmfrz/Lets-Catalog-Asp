@model IEnumerable<Catalog.Models.Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { categoryId = Request.RequestContext.RouteData.Values["categoryId"], subcategoryId = Request.RequestContext.RouteData.Values["subcategoryId"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPics.Picture_URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSpecs.Color)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPics.Picture_URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSpecs.Color)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { categoryId = item.SubCategory.Category.ID, subcategoryId = item.SubCategory.ID, productId = item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { categoryId = item.SubCategory.Category.ID, subcategoryId = item.SubCategory.ID, productId=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { categoryId = item.SubCategory.Category.ID, subcategoryId = item.SubCategory.ID, productId = item.ProductID })
        </td>
    </tr>
}

</table>
